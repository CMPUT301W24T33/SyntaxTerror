<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="#F4EFEF"
    tools:context=".attendeeFragments.NotificationsAttendee"
    android:focusable="true">

    <RelativeLayout
        android:id="@+id/profile_back_actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/actionbar_general" />

    </RelativeLayout>

    <com.google.android.gms.maps.MapView
        android:id="@+id/attendee_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_back_actionbar"/>

    <LinearLayout
        android:id="@+id/attendees_count_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/attendee_map"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/attendees_count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="Attendees: "/>

        <TextView
            android:id="@+id/attendees_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="##"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/notifications_attendee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/attendees_count_layout"
        android:layout_marginTop="0dp" />

</RelativeLayout>
