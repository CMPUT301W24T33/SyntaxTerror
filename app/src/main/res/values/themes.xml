    <style name="Theme.CMPUT301W24T33" parent="Base.Theme.CMPUT301W24T33" />


    <style name="Theme.ActionBar" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:background">#00000000</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">35sp</item>
    </style>

    <style name="CustomOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <!-- Background tint color for the button -->
        <item name="backgroundTint">@color/white</item>

        <!-- Stroke color for the outlined border -->
        <item name="strokeColor">@color/black</item>

        <!-- Stroke width for the outlined border -->
        <item name="strokeWidth">1dp</item>

        <!-- Text color for the button -->
        <item name="android:textColor">@color/black</item>

        <!-- Icon tint for the button icon -->
        <item name="iconTint">@color/black</item>

        <!-- Ripple color for the button (effect on click) -->
        <item name="rippleColor">@color/light_grey</item>

        <!-- Elevation for the button (shadow effect) -->
        <item name="android:elevation">0dp</item> <!-- usually, outlined buttons don't have elevation -->

        <!-- Padding around the button icon -->
        <item name="iconPadding">8dp</item>

        <!-- Size of the button icon -->
        <item name="iconSize">24dp</item>

        <!-- Material shape appearance for the button -->
        <item name="shapeAppearance">@style/MyShapeAppearance</item>
    </style>
