<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ProfileText" parent = "TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MyShapeAppearance" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <declare-styleable name="button_attrs">
        <attr name="button_color_1" format="color"/>
        <attr name="button_color_2" format="color"/>
        <attr name="button_color_3" format="color"/>
        <attr name="check_in_button_image" format="reference"/>
        <attr name="search_button_image" format="reference"/>
        <attr name="switchPersonIcon" format="reference"/>
        <attr name="switchHouseIcon" format="reference"/>

    </declare-styleable>

    <declare-styleable name="action_bar_attrs">
        <attr name="action_bar_attendee" format="color"/>
        <attr name="action_bar_organizer" format="color"/>
        <attr name="switchProfileIcon" format="reference"/>
    </declare-styleable>

</resources>