<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ProfileText" parent = "TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MyShapeAppearance" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="EventDetails" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">100dp</item>
    </style>

    <declare-styleable name="button_attrs">
        <attr name="button_color_1" format="color"/>
        <attr name="button_color_2" format="color"/>
        <attr name="button_color_3" format="color"/>
        <attr name="check_in_button_image" format="reference"/>
        <attr name="search_button_image" format="reference"/>
        <attr name="new_event_image" format="reference"/>
        <attr name="switchPersonIcon" format="reference"/>
        <attr name="switchHouseIcon" format="reference"/>
        <attr name="eventListIcon" format="reference"/>
        <attr name="shareIcon" format="reference"/>
        <attr name="backArrow" format="reference"/>
    </declare-styleable>

    <declare-styleable name="color_attrs">
        <attr name="listColorSecondary" format="color"/>
        <attr name="listColorPrimary" format="color"/>
        <attr name="eventDetailsBackground" format="color"/>
        <attr name="gradient_start" format="color"/>
        <attr name="gradient_center" format="color"/>
        <attr name="gradient_end" format="color"/>
        <attr name="navBarColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="action_bar_attrs">
        <attr name="action_bar_attendee" format="color"/>
        <attr name="action_bar_organizer" format="color"/>
        <attr name="switchProfileIcon" format="reference"/>
    </declare-styleable>

</resources>