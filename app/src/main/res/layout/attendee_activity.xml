<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/attendee_activity"
    android:background="?background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AttendeeActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/attendee_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                layout="@layout/actionbar_attendee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/attendee_top_nav"/>

<!--            <LinearLayout-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:orientation="horizontal"-->
<!--                android:layout_marginBottom="8sp"-->
<!--                android:layout_marginStart="48dp"-->
<!--                android:layout_marginEnd="48dp"-->
<!--                android:layout_marginTop="8sp">-->

<!--                <com.google.android.material.button.MaterialButton-->
<!--                    android:id="@+id/switch_events_button"-->
<!--                    style="@style/CustomOutlinedButton"-->
