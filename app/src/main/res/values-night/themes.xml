    <style name="Theme.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">#00000000</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ShareDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowFrame">@color/background</item>
        <item name="backgroundColor">@color/background</item>
    </style>

    <style name="Theme.AttendeeProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progressBackgroundTint">@color/progress_bar_tint_background</item>
        <item name="android:progressTint">@color/progress_bar_tint</item>
    </style>

    <style name="CustomOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <!-- Background tint color for the button -->
        <item name="backgroundTint">@color/black</item>

        <!-- Stroke color for the outlined border -->
        <item name="strokeColor">@color/white</item>

        <!-- Stroke width for the outlined border -->
        <item name="strokeWidth">1dp</item>

        <!-- Text color for the button -->
        <item name="android:textColor">@color/white</item>

        <!-- Icon tint for the button icon -->
        <item name="iconTint">@color/white</item>

        <!-- Ripple color for the button (effect on click) -->
        <item name="rippleColor">@color/light_grey</item>

        <!-- Elevation for the button (shadow effect) -->
        <item name="android:elevation">0dp</item> <!-- usually, outlined buttons don't have elevation -->

        <!-- Padding around the button icon -->
        <item name="iconPadding">8dp</item>

        <!-- Size of the button icon -->
        <item name="iconSize">24dp</item>

        <!-- Material shape appearance for the button -->
        <item name="shapeAppearance">@style/MyShapeAppearance</item>
    </style>
